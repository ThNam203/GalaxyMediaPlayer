<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Nam: some use color (foreground), some brush (background) -->
    <Color x:Key="colorPrimary">Transparent</Color>
    <Brush x:Key="brushPrimary">Transparent</Brush>

    <Color x:Key="colorSecondary">White</Color>
    <Brush x:Key="brushSecondary">White</Brush>

    <Color x:Key="colorLightAccent">#40c2c2c2</Color>
    <Brush x:Key="brushLightAccent">#40c2c2c2</Brush>

    <Color x:Key="colorAccent">LightGray</Color>
    <Brush x:Key="brushAccent">LightGray</Brush>
    
    <Color x:Key="colorDarkAccent">Gray</Color>
    <Brush x:Key="brushDarkAccent">Gray</Brush>
</ResourceDictionary>