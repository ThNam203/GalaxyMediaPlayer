<Page x:Class="GalaxyMediaPlayer.Pages.VideoMediaPLayer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GalaxyMediaPlayer.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450"  d:DesignWidth="800" Background="BurlyWood"
      Title="VideoMediaPLayer" >

    <Grid AllowDrop="True">
        <MediaElement Margin="50,50,379,143" Name="media" MediaEnded="media_MediaEnded" MediaOpened="media_MediaOpened" />
        <Grid x:Name="MusicPlayerGrid" Margin="0,370,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border x:Name="SongInfoDisplayGrid"
                Background="Black"
                Visibility="Collapsed"
                CornerRadius="5"
                Grid.RowSpan="2"
                Height="60"
                Width="auto"
                MaxWidth="250"
                Margin="4 0 0 0"
                HorizontalAlignment="Left"
>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid   Grid.RowSpan="2"
                        Width="50" Height="50"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="8 0">
                        <Image  x:Name="imgSongImage"
                            Stretch="Uniform"
                            SnapsToDevicePixels="True"/>

                        <Border x:Name="minimizeImageBorder"
                            Padding="16"
                            Visibility="Hidden"
                            >
                            <Border.Background>
                                <SolidColorBrush Color="DimGray" Opacity="0.5"/>
                            </Border.Background>
                            <Image Source="/Resources/Icons/MediaControlIcons/minimize_32.png"/>
                        </Border>
                    </Grid>

                    <TextBlock x:Name="tbSongTitle"
                        Foreground="{DynamicResource brushSecondary}"
                        VerticalAlignment="Center"
                        Margin="0 4 4 0"
                        Width="90"
                        Grid.Column="1"
                        TextTrimming="CharacterEllipsis"/>

                    <TextBlock x:Name="tbSongArtist"
                        Foreground="{DynamicResource brushSecondary}"
                        VerticalAlignment="Center"
                        Margin="0 0 4 4"
                        Width="90"
                        Grid.Column="1"
                        Grid.Row="1"
                        TextTrimming="CharacterEllipsis"/>

                    <StackPanel x:Name="ExtraControlGridInfo" 
                        Grid.Column="2"
                        Orientation="Horizontal"
                        Visibility="Collapsed"
                        Grid.RowSpan="2">

                        <Button x:Name="btnPlayPauseInGridInfo"
                            Style="{StaticResource btnMediaControlStyle}"
                                >
                            <Button.Background>
                                <ImageBrush ImageSource="/Resources/Icons/MediaControlIcons/play_32.png"/>
                            </Button.Background>
                        </Button>

                        <Button x:Name="btnCloseInGridInfo"
                            Style="{StaticResource btnMediaControlStyle}"
                            >
                            <Button.Background>
                                <ImageBrush ImageSource="/Resources/Icons/MediaControlIcons/close_32.png"/>
                            </Button.Background>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <StackPanel x:Name="SongSliderPanel"
                Visibility="Collapsed"
                Orientation="Horizontal"
                Grid.ColumnSpan="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <TextBlock x:Name="tbCurrentSongPosition"
                    Style="{StaticResource tbDurationShow}"
                    Text="00:00:00"/>

                <Slider x:Name="SongDurationSlider"
                    Style="{StaticResource Horizontal_Slider}"
                    HorizontalAlignment="Center"
                    Maximum="100"
                    Minimum="0"
                    Width="250"
                    Margin="8 0"/>

                <TextBlock x:Name="tbSongDuration"
                    Style="{StaticResource tbDurationShow}"
                    Text="00:00:00"
                           Visibility="Visible"
                           />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center"
                Grid.ColumnSpan="3"
                Grid.Row="1">

                <Button x:Name="btnRepeat"
                    Style="{StaticResource btnMediaControlStyle}" Click="btnRepeat_Click"
                            >
                    <Button.Background>
                        <ImageBrush ImageSource="/Resources/Icons/MediaControlIcons/repeat_32.png"/>
                    </Button.Background>
                </Button>

                <Button x:Name="btnPrevious"
                    Style="{StaticResource btnMediaControlStyle}"
                    IsEnabled="False">
                    <Button.Background>
                        <ImageBrush Opacity="0.5" ImageSource="/Resources/Icons/MediaControlIcons/previous_32.png"/>
                    </Button.Background>
                </Button>

                <Button x:Name="btnPlayPause"
                    Style="{StaticResource btnMediaControlStyle}" Click="btnPlayPause_Click">
                    <Button.Background>
                        <ImageBrush Opacity="0.5" ImageSource="/Resources/Icons/MediaControlIcons/play_32.png"/>
                    </Button.Background>
                </Button>

                <Button x:Name="btnNext"
                    Style="{StaticResource btnMediaControlStyle}"
                    IsEnabled="False">
                    <Button.Background>
                        <ImageBrush Opacity="0.5" ImageSource="/Resources/Icons/MediaControlIcons/next_32.png"/>
                    </Button.Background>
                </Button>

                <Button x:Name="btnRandom"
                    Style="{StaticResource btnMediaControlStyle}"
                        >
                    <Button.Background>
                        <ImageBrush Opacity="0.5" ImageSource="/Resources/Icons/MediaControlIcons/random_32.png"/>
                    </Button.Background>
                </Button>

                <Button x:Name="btnMore"
                    Style="{StaticResource btnMediaControlStyle}" Click="btnMore_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="/Resources/Icons/MediaControlIcons/more_32.png"/>
                    </Button.Background>
                </Button>
            </StackPanel>
            <StackPanel x:Name="VolumnControlPanel"
                Orientation="Horizontal"
                Grid.Column="2"
                Grid.Row="1">
                <Button x:Name="btnVolumn"
                    Style="{StaticResource btnMediaControlStyle}" Click="btnVolumn_Click"
                            >
                    <Button.Background>
                        <ImageBrush ImageSource="/Resources/Icons/MediaControlIcons/volume_32.png"/>
                    </Button.Background>
                </Button>

                <Slider x:Name="VolumeSlider"
                   
                    Style="{StaticResource Horizontal_Slider}"
                    HorizontalAlignment="Center"
                    Maximum="1"
                    Minimum="0"
                    Width="100"
                    Margin="8 0" ValueChanged="VolumeSlider_ValueChanged" IsEnabled="True" LargeChange="0.1" SmallChange="0.01" Value="1"/>
            </StackPanel>
            <Label x:Name="Video_Duration" HorizontalAlignment="Left" Margin="85,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="40" Width="155" FontSize="20" FontFamily="Times New Roman" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        </Grid>
        <Slider 
            x:Name="SliderSeek" HorizontalAlignment="Left" Margin="46,320,0,0" VerticalAlignment="Top" Width="619" GotMouseCapture="SliderSeek_GotMouseCapture" LostMouseCapture="SliderSeek_LostMouseCapture"/>

    </Grid>
</Page>
