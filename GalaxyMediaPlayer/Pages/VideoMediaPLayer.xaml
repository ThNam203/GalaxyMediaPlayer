<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GalaxyMediaPlayer.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Name="Video_Page" x:Class="GalaxyMediaPlayer.Pages.VideoMediaPLayer"
      mc:Ignorable="d" 
      d:DesignHeight="450"  d:DesignWidth="800" Background="BurlyWood"
      Title="VideoMediaPLayer" ShowsNavigationUI="True" >

    <Grid AllowDrop="True" Margin="0,0,0,0" >
        <Grid >
            <MediaElement 
                       
                x:Name="media"
                
                MediaEnded="media_MediaEnded" 
                MediaOpened="media_MediaOpened" 
                Margin="0,0,0,0" />
            <Slider 
            x:Name="SliderSeek" 
                
                GotMouseCapture="SliderSeek_GotMouseCapture" 
                LostMouseCapture="SliderSeek_LostMouseCapture" MinHeight="3" 
                Margin="50,0,50,60" VerticalAlignment="Bottom" />
            <StackPanel
                x:Name="StackPanel1"
      
                HorizontalAlignment="Right"
                VerticalAlignment="Top" Width="800"
                Height="40" Orientation="Horizontal" FlowDirection="RightToLeft"
                
                
                
                
                    >
                <Button x:Name="Close_Button" Click="Button_Click" FontFamily="Raleway Black" FontSize="30" FontWeight="Bold" Width="40">
                    <Button.Background>
                        <ImageBrush/>
                    </Button.Background>
                </Button>
                <ui:Button Width="39" Background="{x:Null}" FontSize="25" Height="40" Click="Button_Click_1"/>
                <ui:Button x:Name="Maximize_Button" Content="Button" Click="Minimize_Button_Click" Background="{x:Null}"/>
                <Button x:Name="Minimize_btn" Content="Button" Click="Button_Click_2" Background="{x:Null}"/>



            </StackPanel>
        </Grid>

        <Grid x:Name="VideoPlayerGrid" Margin="0,370,0,0" VerticalAlignment="Bottom" 
              MouseLeave="VideoPlayerGrid_MouseLeave" 
              MouseEnter="VideoPlayerGrid_MouseEnter">
            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity="0.08"/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border x:Name="SongInfoDisplayGrid"
                Visibility="Visible"
                CornerRadius="5"
                Height="60"
                Width="auto"
                MaxWidth="250"
                Margin="143,-183,0,143"
                HorizontalAlignment="Left" Grid.ColumnSpan="2"
/>

            <StackPanel x:Name="SongSliderPanel"
                Visibility="Collapsed"
                Orientation="Horizontal"
                Grid.ColumnSpan="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <TextBlock x:Name="tbCurrentSongPosition"
                    Style="{StaticResource tbDurationShow}"
                    Text="00:00:00"/>

                <Slider x:Name="SongDurationSlider"
                    Style="{StaticResource Horizontal_Slider}"
                    HorizontalAlignment="Center"
                    Maximum="100"
                    Minimum="0"
                    Width="250"
                    Margin="8 0"/>

                <TextBlock x:Name="tbSongDuration"
                    Style="{StaticResource tbDurationShow}"
                    Text="00:00:00"
                           Visibility="Visible"
                           />
            </StackPanel>

            <StackPanel
                x:Name="control_panel"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Grid.ColumnSpan="3"
                Grid.Row="1">

                <Button x:Name="btnRepeat"
                    Style="{StaticResource btnMediaControlStyle}" Click="btnRepeat_Click" 
                            >
                    <Button.Background>
                        <ImageBrush ImageSource="/Resources/Icons/MediaControlIcons/repeat_32.png"/>
                    </Button.Background>
                </Button>

                <Button x:Name="btnPrevious"
                    Style="{StaticResource btnMediaControlStyle}"
                    IsEnabled="False">
                    <Button.Background>
                        <ImageBrush ImageSource="/Resources/Icons/MediaControlIcons/previous_32.png"/>
                    </Button.Background>
                </Button>

                <Button x:Name="btnPlayPause"
                    Style="{StaticResource btnMediaControlStyle}" Click="btnPlayPause_Click">
                    <Button.Background>
                        <ImageBrush x:Name="Play_PauseIcon"
                            Opacity="1" 
                            ImageSource="/Resources/Icons/MediaControlIcons/play_32.png"/>
                    </Button.Background>
                </Button>

                <Button x:Name="btnNext"
                    Style="{StaticResource btnMediaControlStyle}"
                    IsEnabled="False">
                    <Button.Background>
                        <ImageBrush ImageSource="/Resources/Icons/MediaControlIcons/next_32.png"/>
                    </Button.Background>
                </Button>

                <Button x:Name="btnRandom"
                    Style="{StaticResource btnMediaControlStyle}"
                        >
                    <Button.Background>
                        <ImageBrush ImageSource="/Resources/Icons/MediaControlIcons/random_32.png"/>
                    </Button.Background>
                </Button>

                <Button x:Name="btnMore"
                    Style="{StaticResource btnMediaControlStyle}" Click="btnMore_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="/Resources/Icons/MediaControlIcons/more_32.png"/>
                    </Button.Background>
                </Button>
            </StackPanel>
            <StackPanel x:Name="VolumeControlPanel"
                Orientation="Horizontal"
                Grid.Column="2"
                Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,8">
                <Button x:Name="btnVolumn"
                    Style="{StaticResource btnMediaControlStyle}" Click="btnVolumn_Click"
                            >
                    <Button.Background>
                        <ImageBrush x:Name="VolumeIcon" ImageSource="/Resources/Icons/MediaControlIcons/volume_32.png"/>
                    </Button.Background>
                </Button>

                <Slider x:Name="VolumeSlider"
                   
                    Style="{StaticResource Horizontal_Slider}"
                    HorizontalAlignment="Left"
                    Maximum="1"
                    Minimum="0"
                    Width="100"
                    Margin="8 0" ValueChanged="VolumeSlider_ValueChanged" IsEnabled="True" LargeChange="0.1" SmallChange="0.01" Value="1"/>
            </StackPanel>
            <Label x:Name="Video_Duration" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" Height="40" Width="150" FontSize="20" FontFamily="Times New Roman" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

        </Grid>

    </Grid>
</Page>
