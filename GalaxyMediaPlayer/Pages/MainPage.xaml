<Page x:Class="GalaxyMediaPlayer.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GalaxyMediaPlayer.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="NavCol" Width="200" MinWidth="180" MaxWidth="250"/>
            <ColumnDefinition Name="GridSplitterCol" Width="2"/>
            <ColumnDefinition Name="ContentCol" Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Name="MainRow" Height="*"/>
            <RowDefinition Name="MusicPlayerRow" Height="60"/>
        </Grid.RowDefinitions>

        <!-- Nam: this holds navigate buttons -->
        <Border Name="NavBorder"
                Padding="16 0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5, 0" EndPoint="0.5, 1">
                    <GradientStop Color="#20c2c2c2" Offset="0.0" />
                    <GradientStop Color="Transparent" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>
            
            <!-- Nam: app's name textblock -->
            <StackPanel>
                <TextBlock Name="tbAppName"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="28"
                       HorizontalAlignment="Center"
                       Margin="0 8"
                       Text="Galaxy MP"/>

                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
            </StackPanel>
        </Border>

        <GridSplitter Name="GridSplitter" 
                      Grid.Column="1"
                      Width="2"
                      Background="Transparent"
                      HorizontalAlignment="Stretch"/>

        <Grid Name="ContentGrid"
              Grid.Column="2">
            <Grid Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Grid.Resources>
                    <Style TargetType="Button">
                        <Style.Setters>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Name="border"
                                                Background="Transparent"
                                                Margin="4"
                                                Padding="4">
                                            <ContentPresenter Name="presenter"
                                                              TextBlock.FontWeight="Bold"
                                                              TextBlock.Foreground="DarkGray"/>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="presenter" 
                                                        Property="TextBlock.Foreground" 
                                                        Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style.Setters>
                    </Style>
                </Grid.Resources>

                <StackPanel Orientation="Horizontal" 
                            Grid.Column="1"
                            HorizontalAlignment="Right">
                    <Button Name="btnMinimize"
                            Click="btnMinimize_Click"
                            Content="__"/>

                    <Button Name="btnMaximize"
                            Click="btnMaximize_Click"
                            Content="▭" />

                    <Button Name="btnClose" 
                            Click="btnClose_Click"
                            Content="✕"
                            Margin="0 0 8 0"/>
                </StackPanel>
            </Grid>
        </Grid>

        <Grid Name="MusicPlayerGrid"
              Grid.ColumnSpan="3"
              Grid.Row="1">
            
        </Grid>
    </Grid>
</Page>
