<Page x:Class="GalaxyMediaPlayer.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GalaxyMediaPlayer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">


    <Grid Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="NavCol" Width="200" MinWidth="180" MaxWidth="250"/>
            <ColumnDefinition Name="GridSplitterCol" Width="2"/>
            <ColumnDefinition Name="ContentCol" Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Name="MainRow" Height="*"/>
            <RowDefinition Name="MusicPlayerRow" Height="70"/>
        </Grid.RowDefinitions>

        <!-- Nam: this holds navigate buttons -->
        <Border Name="NavBorder"
                Width="{Binding Path=Width, ElementName=NavCol}">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5, 0" EndPoint="0.5, 1">
                    <GradientStop Color="#20c2c2c2" Offset="0.0" />
                    <GradientStop Color="Transparent" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <!--Style button of navbar but it does not work-->

                <!--Dat: Row 0 is the name of app-->
                <Grid Grid.Row="0">
                    <!-- Nam: app's name textblock -->
                    <StackPanel Name="SPanelAppName" 
                                Width="{Binding Path=Width, ElementName=NavCol}">
                        <TextBlock x:Name="tbAppName"
                                   Foreground="White"
                                   Width="{Binding Path=Width, ElementName=SPanelAppName}"
                                   FontWeight="Bold"
                                   FontSize="28"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   Text="Galaxy MP"/>

                        <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
                    </StackPanel>
                </Grid>

                <!--Dat: Row 1 is list of app-->
                <Grid Grid.Row="1">
                    <ListBox Name="mediaListBox" 
                                 SelectionChanged="mediaListBox_SelectionChanged"
                                 SelectionMode="Single" 
                                 Background="Transparent" 
                                 BorderBrush="Transparent"
                                 HorizontalAlignment="Left"
                                 Width="200">

                        <local:NavButton Title="Home" ImageUri="ic_home.png"/>
                        <local:NavButton Title="Movies" ImageUri="ic_movie.png"/>
                        <local:NavButton Title="Videos" ImageUri="ic_video.png"/>
                        <local:NavButton Title="Photos" ImageUri="ic_image.png"/>
                        <local:NavButton Title="Music" ImageUri="ic_note.png"/>
                        <local:NavButton Title="Computer" ImageUri="ic_computer.png" NavLink="Pages/NavContentPages/Computer.xaml"/>
                    </ListBox>
                </Grid>
            </Grid>
        </Border>

        <GridSplitter Name="GridSplitter" 
                      Grid.Column="1"
                      Width="2"
                      Background="Transparent"
                      HorizontalAlignment="Stretch"/>

        <Grid Name="ContentGrid"
              Grid.Column="2">
            <Grid Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>

                    <RowDefinition Name="ControlButton" Height="auto"/>
                    <RowDefinition Height="*"/>

                    <RowDefinition Name="ControlButtons" Height="auto"/>
                    <RowDefinition/>

                </Grid.RowDefinitions>

                <Grid.Resources>
                    <Style TargetType="Button">
                        <Style.Setters>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Name="border"
                                                Background="Transparent"
                                                Margin="4"
                                                Padding="4">
                                            <ContentPresenter Name="presenter"
                                                              TextBlock.FontWeight="Bold"
                                                              TextBlock.Foreground="DarkGray"/>
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="presenter" 
                                                        Property="TextBlock.Foreground" 
                                                        Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style.Setters>
                    </Style>
                </Grid.Resources>

                <StackPanel Orientation="Horizontal" 
                            Grid.Column="1"
                            HorizontalAlignment="Right">
                    <Button Name="btnMinimize"
                            Click="btnMinimize_Click"
                            Content="__"/>

                    <Button Name="btnMaximize"
                            Click="btnMaximize_Click"
                            Content="▭" />

                    <Button Name="btnClose" 
                            Click="btnClose_Click"
                            Content="✕"
                            Margin="0 0 8 0"/>
                </StackPanel>
            </Grid>

            <Frame Name="ContentFrame" 
                   Grid.Column="1"
                   Grid.Row="1"/>
        </Grid>

        <Grid Name="MusicPlayerGrid"
                    Grid.ColumnSpan="3"
                    Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Width" Value="24"/>
                    <Setter Property="Height" Value="24"/>
                    <Setter Property="Margin" Value="8 0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="outerBorder" Padding="4" CornerRadius="5">
                                    <Border x:Name="innerBorder" Background="{TemplateBinding Background}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="outerBorder" Property="Background" Value="#89CFF0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Resources>

            <Border Name="SongInfoDisplayGrid"
                    Background="Black"
                    Visibility="Collapsed"
                    CornerRadius="5"
                    Grid.RowSpan="2"
                    Height="60"
                    Width="180"
                    Margin="4 0 0 0"
                    HorizontalAlignment="Left">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Image Name="imgSongImage"
                           Width="60" Height="60"
                           Margin="8 4"
                           Stretch="Uniform"
                           HorizontalAlignment="Left"
                           SnapsToDevicePixels="True"
                           Grid.RowSpan="2"/>

                    <TextBlock Name="tbSongTitle"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0 4 4 0"
                               Grid.Column="1"
                               TextTrimming="CharacterEllipsis"/>

                    <TextBlock Name="tbSongArtist"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0 0 4 4"
                               Grid.Column="1"
                               Grid.Row="1"/>
                </Grid>
            </Border>

            <StackPanel Name="SongSliderPanel"
                        Visibility="Collapsed"
                        Orientation="Horizontal"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontWeight" Value="DemiBold"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="TextAlignment" Value="Center"/>
                        <Setter Property="Width" Value="50"/>
                    </Style>

                    <Style x:Key="UncompletedSliderRepeatButton" TargetType="RepeatButton">
                        <Setter Property="SnapsToDevicePixels" Value="true" />
                        <Setter Property="OverridesDefaultStyle" Value="true" />
                        <Setter Property="IsTabStop" Value="false" />
                        <Setter Property="Focusable" Value="false" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="RepeatButton">
                                    <Border Background="White" Height="3"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style x:Key="CompletedSliderRepeatButton" TargetType="RepeatButton">
                        <Setter Property="SnapsToDevicePixels" Value="true" />
                        <Setter Property="OverridesDefaultStyle" Value="true" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="RepeatButton">
                                    <Border SnapsToDevicePixels="True" Background="#18A8D8" Height="3"/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style x:Key="SliderThumb" TargetType="Thumb">
                        <Setter Property="SnapsToDevicePixels" Value="true" />
                        <Setter Property="OverridesDefaultStyle" Value="true" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Thumb">
                                    <Ellipse Height="10" Width="10" Fill="AliceBlue"></Ellipse>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <ControlTemplate x:Key="Slider" TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Track Grid.Row="1" x:Name="PART_Track"   >
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource CompletedSliderRepeatButton}"  Command="Slider.DecreaseLarge" />
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource SliderThumb}"  />
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource UncompletedSliderRepeatButton}" Command="Slider.IncreaseLarge" />
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>

                    <Style x:Key="Horizontal_Slider" TargetType="Slider">
                        <Setter Property="Focusable" Value="False"/>
                        <Setter Property="SnapsToDevicePixels" Value="true" />
                        <Setter Property="OverridesDefaultStyle" Value="true" />
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Style.Triggers>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter Property="MinHeight" Value="21" />
                                <Setter Property="MinWidth" Value="104" />
                                <Setter Property="Template" Value="{StaticResource Slider}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Resources>
                <TextBlock Name="tbCurrentSongPosition"
                           Text="00:00:00"/>

                <Slider Name="SongDurationSlider"
                        Thumb.DragCompleted="SongDurationSlider_Thumb_DragCompleted"
                        Thumb.DragStarted="SongDurationSlider_Thumb_DragStarted"
                        ValueChanged="SongDurationSlider_ValueChanged"
                        Style="{StaticResource Horizontal_Slider}"
                        HorizontalAlignment="Center"
                        Maximum="100"
                        Minimum="0"
                        Width="250"
                        Margin="8 0"/>

                <TextBlock Name="tbSongDuration"
                           Text="00:00:00"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Grid.ColumnSpan="2"
                        Grid.Row="1">
                <Button Name="btnRandom">
                    <Button.Background>
                        <ImageBrush ImageSource="/Resources/Icons/MediaControlIcons/random_32.png"/>
                    </Button.Background>
                </Button>

                <Button Name="btnLoop"
                        Click="btnLoop_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="/Resources/Icons/MediaControlIcons/loop_32.png"/>
                    </Button.Background>
                </Button>

                <Button Name="btnPrevious">
                    <Button.Background>
                        <ImageBrush ImageSource="/Resources/Icons/MediaControlIcons/previous_32.png"/>
                    </Button.Background>
                </Button>

                <Button Name="btnPlayPause"
                    Click="btnPlayPause_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="/Resources/Icons/MediaControlIcons/play_32.png"/>
                    </Button.Background>
                </Button>

                <Button Name="btnNext">
                    <Button.Background>
                        <ImageBrush ImageSource="/Resources/Icons/MediaControlIcons/next_32.png"/>
                    </Button.Background>
                </Button>

                <Button Name="btnVolumn"
                        Click="btnVolumn_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="/Resources/Icons/MediaControlIcons/volume_32.png"/>
                    </Button.Background>
                </Button>

                <Button Name="btnMore">
                    <Button.Background>
                        <ImageBrush ImageSource="/Resources/Icons/MediaControlIcons/more_32.png"/>
                    </Button.Background>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
